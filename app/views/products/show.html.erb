<p id="notice"><%= notice %></p>


<div class="column">
  <%= link_to 'Back', products_path, class: "button is-dark" %>
</div>

<div class="columns">

  <div class="column is-one-quarter">
    <%= image_tag(@product.image_url(:default), alt: "Image") if @product.image? %>

  </div>

  <div class="column is-three-quarters">
    <div class="field">
      <strong>Name:</strong>
      <%= @product.name %>
    </div>


    <div class="field">
      <strong>Description:</strong>
      <%= @product.description %>
    </div>


    <div class="field">
      <strong>Price:</strong>
      <%= number_to_currency( @product.price )%>
    </div>

  </div>

  <%= button_to 'Add to card', '#', class: 'button is-primary' %>


</div>




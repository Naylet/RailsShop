<section class="section is-fullheight">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <div class="box">
          <h2 class="title is-2">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field">
              <label class="label">Email</label>
              <div class="control has-icons-left">
                <%= f.input_field :email, required: true, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>

              </div>
            </div>

            <div class="field">
              <label class="label">Password</label>
              <div class="control has-icons-left">
                <%= f.input_field :password, required: true, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>

            <%= f.button :submit, "Log in", class:"button is-primary is-medium" %>

            <div>
              <%= render "devise/shared/links" %>
            </div>


          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>
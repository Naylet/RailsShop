<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <div class="box ">
          <h2 class="title is-2">Edit <%= resource_name.to_s.humanize %></h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="field">
              <label class="label">Email</label>
              <div class="control has-icons-left">
                <%= f.input_field :email, required: true, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>

              </div>
            </div>

            <div class="field">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>

            <div class="field">
              <label class="label">Password</label>
              <div class="control has-icons-left">
                <%= f.input_field :password, autocomplete: "off",  required: false, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
              <div>leave it blank if you don't want to change it</div>
            </div>


            <div class="field">
              <label class="label">Password confirmation</label>
              <div class="control has-icons-left">
                <%= f.input_field :password_confirmation,  required: false, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>

            <div class="field">
              <label class="label">Current password</label>
              <div class="control has-icons-left">
                <%= f.input_field :current_password, autocomplete: "off",  required: false, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
              <div>we need your current password to confirm your changes</div>
            </div>

            <div class="field">
              <%= f.button :submit, "Update", class:"button is-medium is-primary" %>
            </div>

            <div>
              <%= render "devise/shared/links" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
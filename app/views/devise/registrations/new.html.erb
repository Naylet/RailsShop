<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <div class="box ">
          <h2 class="title is-2">Sign Up</h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification%>

            <div class="field">
              <label class="label">Email</label>
              <div class="control has-icons-left">
                <%= f.input_field :email, required: true, class:"input", label:false %>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
              <div class="error"><%= f.error :email  if f.error :email  %></div>
            </div>

            <div class="field">
              <label class="label">Password</label>
              <div class="control has-icons-left">
                <%= f.input_field :password, required: true, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
              <div class="error"><%= f.error :password  if f.error :password  %></div>

            </div>

            <div class="field">
              <label class="label">Password confirmation</label>
              <div class="control has-icons-left">
                <%= f.input_field :password_confirmation, required: true, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
              <div class="error"><%= f.error :password_confirmation  if f.error :password_confirmation  %></div>
            </div>

            <div class="field">
              <%= f.button :submit, "Sign up", class:"button is-primary is-medium" %>
            </div>

            <div>
              <%= render "devise/shared/links" %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>